@using WeekendPlan.ViewModels
@model FilmViewModel
@{
    ViewBag.Title = "Film details";
}

<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width" />
    @*<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />*@
    @*<script src="~/Scripts/bootstrap.js" type="text/javascript"></script>*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Film Details</title>
</head>
<body>

        <div class="row" style="margin-top: 50px;">
            <div class="col-md-2">
                <h3 style="color:lightcoral ">@Model.Title</h3>
                <br />
                <img src="@Model.Poster" class="img-polaroid" width="180" height="240">
            </div>
            <div class="col-md-8" style="margin-top: 30px;">
                <p>Страна - @Model.Country</p>
                <p>Режиссер - @Model.Director</p>
                <p>Звезды - @Model.Stars</p>
                <p>Бюджет - @Model.Budget</p>
                <p>Жанр - <a href="~/Film/GenreFilmsView/@Model.Genres">@Model.Genres</a></p>
                <p>Описание - @Model.BodyText</p>
            </div>
            <div class="col-md-2" style="margin-top: 30px;">
                <form action="~/Film/FilmComments/@Model.FilmId" method="post">
                    <p>Комментарии:</p>
                    @foreach(var c in Model.Comments)
                    {
                        <a href="~//">@c.Author.Name</a>
                        <p>@c.Text</p>
                    }

                    <textarea id="Comment" name="Comment" rows="4" cols="20" style="margin: 0px; width: 243px; height: 137px;">Напишите комментарий...</textarea>
                    <input class="btn btn-primary" id="Save" type="submit" value="save" name="btnSave" />
                    </form>
                    @*     @Html.DropDownList("Genres", (SelectList)ViewBag.DropDownValuesGenre, new { @class = "form-control" })*@
</div>
        </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
