@using WeekendPlan.ViewModels
@model IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Популярные события</h1>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="@Model.Events[0].FirstImage" style="height:276px" class="img-responsive" />
                <div class="carousel-caption">

                    <p>
                        <a href="~/Event/EventDetails/@Model.Events[0].EventId" title="@Model.Events[0].Title" style="margin-right:45px"> @Model.Events[0].Title</a>
                    </p>

                </div>
            </div>
            <div class="item">
                <img src="@Model.Events[1].FirstImage" style="height:276px" class="img-responsive" />
                <div class="carousel-caption">

                    <p>
                        <a href="~/Event/EventDetails/@Model.Events[1].EventId" title="@Model.Events[1].Title" style="margin-right:45px"> @Model.Events[1].Title</a>
                    </p>

                </div>
            </div>
            <div class="item">
                <img src="@Model.Events[2].FirstImage" style="height:276px" class="img-responsive" />
                <div class="carousel-caption">

                    <p>
                        <a href="~/Event/EventDetails/@Model.Events[2].EventId" title="@Model.Events[2].Title" style="margin-right:45px"> @Model.Events[2].Title</a>
                    </p>

                </div>
            </div>
            <div class="item">
                <img src="@Model.Events[3].FirstImage" style="height:276px" class="img-responsive" />
                <div class="carousel-caption">

                    <p>
                        <a href="~/Event/EventDetails/@Model.Events[3].EventId" title="@Model.Events[3].Title" style="margin-right:45px"> @Model.Events[3].Title</a>
                    </p>

                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>

<div class="row">
    <div class="col-md-4">
        @if (Model.User != null)
        {
            <h2>Построить маршрут</h2>
            <p><a class="btn btn-default" href="~/Opportunity/Routes">Маршруты</a></p>
        }
    </div>
    <div class="col-md-4">
        @if (Model.User != null)
        {
            <h2>Варианты маршрутов</h2>
            <p><a class="btn btn-default" href="~/Opportunity/Opportunities">Варианты маршрутов</a></p>
        }
    </div>
    <div class="col-md-4">
        @if (Model.User != null)
        {
            <h2>Мои интересы</h2>
            if (Model.TagsUser == null)
            {
                <p>Заполните анкету</p>
                <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Перейти к анкете</a></p>
            }
            else
            {
                foreach (var t in Model.TagsUser)
                {
                    <a href="~/Search/Search?tag=@t.Text">#@t.Text</a>
                }
            }
        }
    </div>
</div>
